{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AgentOptions": {
    "KubeconfigPath": "/root/.kube/config",
    "WorkerInterval": 10,
    "WorkerTime": 20,
    "ProcessorType": "Channel"
  },
  "MonitorSetting": {
    "AllowedResources": [],
    "DefaultAllowedResources": [],
    "Comments": {
      "Fields": {
        "Name": "DefaultAllowedResources",
        "Version": "1.0.0"
      },
      "Description": [
        "According to the design of .netcore, the configuration of []string is to merge the original value instead of replacing it.",
        "So the 'MonitorSetting.DefaultAllowedResources' is used to set append resource",
        "The 'MonitorSetting.DefaultAllowedResources' is used when 'MonitorSetting.AllowedResources' is empty",
        "The following DefaultAllowedResources is the original value"
      ],
      "DefaultAllowedResources": [
        "Namespace",
        "Pod",
        "Service",
        "Deployment",
        "ReplicaSet",
        "StatefulSet",
        "DaemonSet",
        "Job",
        "CronJob",
        "ConfigMap",
        "Secret",
        "ServiceAccount",
        "Role",
        "RoleBinding",
        "ClusterRole",
        "ClusterRoleBinding",
        "NetworkPolicy",
        "Ingress",
        "PersistentVolume",
        "PersistentVolumeClaim",
        "StorageClass",
        "VolumeAttachment",
        "LimitRange",
        "ResourceQuota",
        "PodSecurityPolicy",
        "PodDisruptionBudget",
        "PriorityClass",
        "Node"
      ]
    }
  }
}